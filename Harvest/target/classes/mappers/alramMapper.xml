<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapper.xml 만들 때 참고용, 아래 namespace 수정해서 쓰세요! -->
<mapper namespace="com.itwillbs.mappers.alramMapper">

	<insert id="insertAlram">
		insert into alram_tb(num,idx,title,start,id) 
		values(#{num},#{idx},#{title},#{start},#{id})
	</insert>
	
	<select id="getMaxNum" resultType="java.lang.Integer">
		select max(num) from alram_tb
	</select>
	
	<select id="getAlram" resultType="com.itwillbs.domain.AlramDTO">
		select idx from alram_tb
	</select>
	
	<select id="getAlramCount" resultType="java.lang.Integer">
		select count(*) from alram_tb a join project_tb p on a.idx = p.idx where p.idx=10 group by p.idx;
	</select>
	
</mapper>